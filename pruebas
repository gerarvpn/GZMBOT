#!/bin/bash

# ============================================================
# GZMBOT - ENTERPRISE EDITION (IA GEMINI GRATIS - MODELO CORRECTO)
# ============================================================

clear
echo "üöÄ Iniciando Instalaci√≥n de GZMBOT con IA Gemini (GRATIS - modelo gemini-3-flash-preview)..."

read -p "üë§ Usuario Maestro: " ADMIN_USER
read -sp "üîê Contrase√±a Maestra: " ADMIN_PASS
echo -e "\n"

# Instalaci√≥n de dependencias del sistema
sudo apt-get update
sudo apt-get install -y curl build-essential ffmpeg libnss3 libatk-bridge2.0-0 \
    libxcomposite1 libxrandr2 libgbm1 libasound2 fonts-liberation \
    libpangocairo-1.0-0 libxcursor1 libxdamage1 libxi6 libxtst6 \
    libcups2 libxss1 libxshmfence1

# Instalar Node.js 18
curl -fsSL https://deb.nodesource.com/setup_18.x | sudo -E bash -
sudo apt-get install -y nodejs

# Configurar timezone del servidor a RD
sudo timedatectl set-timezone America/Santo_Domingo 2>/dev/null || true
export TZ='America/Santo_Domingo'

# Crear estructura de directorios
mkdir -p $HOME/gzmbot/views
mkdir -p $HOME/gzmbot/data
mkdir -p $HOME/gzmbot/media
mkdir -p $HOME/gzmbot/backups
cd $HOME/gzmbot

# Crear archivo de configuraci√≥n inicial (solo Gemini)
cat <<EOF > config.json
{
  "adminUser": "$ADMIN_USER",
  "adminPassword": "$ADMIN_PASS",
  "port": 80,
  "sessionSecret": "$(openssl rand -hex 24)",
  "backupPhone": "",
  "geminiApiKey": "",
  "iaEnabled": false,
  "iaPrompt": "Eres un asistente virtual amable y servicial. Responde en espa√±ol de forma clara y concisa."
}
EOF

# ===================== BACKEND CON GEMINI (MODELO CORRECTO) =====================
cat <<'APPEOF' > app.js
// Forzar timezone del proceso a RD
process.env.TZ = 'America/Santo_Domingo';

const { Client, LocalAuth, MessageMedia } = require('whatsapp-web.js');
const qrcode = require('qrcode');
const express = require('express');
const http = require('http');
const socketIo = require('socket.io');
const session = require('express-session');
const fs = require('fs');
const path = require('path');
const cron = require('node-cron');
const moment = require('moment-timezone');
const multer = require('multer');
const { GoogleGenerativeAI } = require('@google/generative-ai');

const TZ = 'America/Santo_Domingo';
const app = express();
const server = http.createServer(app);
const io = socketIo(server);

const DB_PATH = path.join(__dirname, 'data/database.json');
const CONFIG_PATH = path.join(__dirname, 'config.json');
const MEDIA_PATH = path.join(__dirname, 'media');
const BACKUP_PATH = path.join(__dirname, 'backups');
const AUTH_PATH = path.join(__dirname, '.wwebjs_auth');

// Inicializar base de datos si no existe
if (!fs.existsSync(DB_PATH)) {
    fs.writeFileSync(DB_PATH, JSON.stringify({
        training: [], 
        reminders: [], 
        excluded: [], 
        learning: [],
        stats: { replied: 0, total: 0, iaReplied: 0 },
        conversations: {}
    }));
}

const storage = multer.diskStorage({
    destination: (req, file, cb) => {
        cb(null, file.fieldname === 'backup' ? BACKUP_PATH : MEDIA_PATH);
    },
    filename: (req, file, cb) => cb(null, Date.now() + '-' + file.originalname)
});
const upload = multer({ storage });

app.use(express.json());
app.use(express.urlencoded({ extended: true }));
app.use('/media', express.static(MEDIA_PATH));

const getConfig = () => JSON.parse(fs.readFileSync(CONFIG_PATH));
let config = getConfig();

app.use(session({
    secret: config.sessionSecret,
    resave: false,
    saveUninitialized: true,
    cookie: { maxAge: 86400000 }
}));

const getDB = () => JSON.parse(fs.readFileSync(DB_PATH));
const saveDB = (data) => fs.writeFileSync(DB_PATH, JSON.stringify(data, null, 2));

// Funci√≥n para obtener hora actual de RD
function nowRD() {
    return moment().tz(TZ);
}

let client;
let botStatus = "Desconectado";
let lastQR = null;
let isConnected = false;

console.log('üïê Hora del servidor:', new Date().toString());
console.log('üïê Hora RD (moment):', nowRD().format('DD/MM/YYYY HH:mm:ss'));
console.log('üïê Timezone configurado:', TZ);

// ============ COLA DE MENSAJES POR TEL√âFONO ============
const phoneQueues = new Map();

function processQueue(phone) {
    const queue = phoneQueues.get(phone);
    if (!queue || queue.processing) return;
    queue.processing = true;
    const next = queue.messages.shift();
    if (next) {
        next().finally(() => {
            queue.processing = false;
            if (queue.messages.length > 0) processQueue(phone);
        });
    } else {
        queue.processing = false;
    }
}

function enqueueMessage(phone, handler) {
    if (!phoneQueues.has(phone)) {
        phoneQueues.set(phone, { messages: [], processing: false });
    }
    const queue = phoneQueues.get(phone);
    queue.messages.push(handler);
    if (!queue.processing) processQueue(phone);
}

// ============ FUNCI√ìN DE IA GEMINI (GRATIS) ============
async function callGemini(phone, userMessage, userName) {
    const cfg = getConfig();
    
    // Verificaciones
    if (!cfg.iaEnabled) {
        console.log(`‚ÑπÔ∏è [IA] IA desactivada para ${phone}`);
        return null;
    }
    
    if (!cfg.geminiApiKey || cfg.geminiApiKey.trim() === '') {
        console.log(`‚ÑπÔ∏è [IA] No hay API key de Gemini configurada para ${phone}`);
        return null;
    }

    const apiKey = cfg.geminiApiKey.trim();

    const db = getDB();
    if (!db.conversations[phone]) {
        db.conversations[phone] = { name: null, history: [], awaitingName: false };
        saveDB(db);
    }
    const conv = db.conversations[phone];

    console.log(`üîç [IA] Procesando mensaje de ${phone}: "${userMessage.substring(0,50)}..."`);

    // Si estamos esperando nombre, guardarlo y responder saludo
    if (conv.awaitingName) {
        const name = userMessage.trim();
        if (name === '') {
            return "Por favor, dime tu nombre para poder ayudarte.";
        }
        conv.name = name;
        conv.awaitingName = false;
        saveDB(db);
        console.log(`‚úÖ Nombre guardado para ${phone}: ${name}`);
        return `¬°Hola ${conv.name}! Encantado de conocerte. ¬øEn qu√© puedo ayudarte hoy?`;
    }

    // Si no tiene nombre, preguntar
    if (!conv.name) {
        conv.awaitingName = true;
        saveDB(db);
        console.log(`‚ùì Preguntando nombre a ${phone}`);
        return "Hola, soy el asistente virtual. ¬øPodr√≠as decirme tu nombre para poder ayudarte mejor?";
    }

    try {
        console.log(`üåê Llamando a Gemini para ${phone}...`);
        
        // Inicializar Gemini con el modelo correcto (gemini-3-flash-preview)
        const genAI = new GoogleGenerativeAI(apiKey);
        const model = genAI.getGenerativeModel({ model: "gemini-3-flash-preview" });

        // Construir el prompt con contexto
        const historyContext = conv.history.slice(-5).map(msg => 
            `${msg.role === 'user' ? 'Usuario' : 'Asistente'}: ${msg.content}`
        ).join('\n');

        const prompt = `${cfg.iaPrompt || "Eres un asistente virtual amable y servicial."}
        
El usuario se llama ${conv.name}.

Historial reciente de la conversaci√≥n:
${historyContext}

Usuario: ${userMessage}
Asistente:`;

        // Generar respuesta
        const result = await model.generateContent(prompt);
        const response = await result.response;
        const text = response.text();

        console.log(`‚úÖ Respuesta recibida de Gemini para ${phone}: "${text.substring(0,50)}..."`);
        return text;

    } catch (error) {
        console.error(`‚ùå Error en Gemini para ${phone}:`, error.message);
        
        if (error.message.includes('API key')) {
            return "‚ùå Error de autenticaci√≥n con Gemini. El administrador debe verificar la API key.";
        } else if (error.message.includes('quota')) {
            return "‚ö†Ô∏è L√≠mite de uso de Gemini alcanzado. Tiene 60 consultas por minuto gratis. Espera un momento.";
        } else if (error.message.includes('finish_reason: SAFETY')) {
            return "‚ö†Ô∏è No puedo responder a esa pregunta por pol√≠ticas de seguridad.";
        }
        
        return "Lo siento, ocurri√≥ un error al procesar tu mensaje. Intenta de nuevo.";
    }
}

function initBot() {
    client = new Client({
        authStrategy: new LocalAuth({ dataPath: AUTH_PATH }),
        puppeteer: {
            headless: true,
            args: [
                '--no-sandbox', 
                '--disable-setuid-sandbox', 
                '--disable-dev-shm-usage', 
                '--disable-gpu'
            ]
        }
    });

    client.on('qr', (qr) => {
        botStatus = "Esperando QR";
        isConnected = false;
        lastQR = qr;
        qrcode.toDataURL(qr, (err, url) => {
            io.emit('qr_update', url);
            io.emit('connection_status', { connected: false, status: botStatus });
            io.emit('status_update', botStatus);
        });
    });

    client.on('ready', () => {
        botStatus = "Conectado";
        isConnected = true;
        lastQR = null;
        io.emit('status_update', botStatus);
        io.emit('connection_status', { connected: true, status: botStatus });
        console.log('‚úÖ Bot conectado -', nowRD().format('DD/MM/YYYY HH:mm:ss'));
    });

    client.on('authenticated', () => console.log('üîê Autenticado'));

    client.on('auth_failure', (msg) => {
        console.error('‚ùå Auth failure:', msg);
        botStatus = "Error de autenticaci√≥n";
        io.emit('status_update', botStatus);
    });

    client.on('disconnected', (reason) => {
        botStatus = "Desconectado";
        isConnected = false;
        io.emit('status_update', botStatus);
        io.emit('connection_status', { connected: false, status: botStatus });
        console.log('‚ùå Bot desconectado:', reason);
    });

    client.on('message', async (msg) => {
        try {
            // Ignorar mensajes de grupos y estados
            if (msg.from.includes('@g.us') || msg.from === 'status@broadcast') return;

            const phone = msg.from.replace('@c.us', '');

            // Encolar el procesamiento para este tel√©fono
            enqueueMessage(phone, async () => {
                try {
                    // Primero, aseguramos que exista la entrada de conversaci√≥n
                    let db = getDB();
                    if (!db.conversations[phone]) {
                        db.conversations[phone] = { name: null, history: [], awaitingName: false };
                        saveDB(db);
                    }

                    // Verificar excluidos
                    if (db.excluded && db.excluded.some(ex => phone.includes(ex.phone))) return;

                    // Manejar notas de voz
                    if (msg.type === 'ptt') {
                        await msg.reply('üé§ Por favor, escribe tu mensaje. No puedo procesar notas de voz.');
                        return;
                    }

                    const text = msg.body.toLowerCase().trim();

                    // Guardar el mensaje del usuario en el historial
                    db = getDB();
                    const conv = db.conversations[phone];
                    conv.history.push({ 
                        role: "user", 
                        content: msg.body, 
                        timestamp: nowRD().toISOString() 
                    });
                    
                    // Limitar historial a 50 mensajes
                    if (conv.history.length > 50) {
                        conv.history = conv.history.slice(-50);
                    }
                    saveDB(db);

                    // Verificar si hay trigger manual (respuesta programada)
                    if (db.training && db.training.length > 0) {
                        const trigger = db.training.find(t => {
                            if (!t || !t.key) return false;
                            const key = t.key.toLowerCase().trim();
                            return text.includes(key) || key.includes(text);
                        });

                        if (trigger) {
                            console.log(`üéØ Trigger manual para ${phone}: "${trigger.key}"`);
                            if (trigger.mediaPaths && trigger.mediaPaths.length > 0) {
                                try {
                                    const firstMedia = MessageMedia.fromFilePath(trigger.mediaPaths[0]);
                                    await msg.reply(firstMedia, null, { caption: trigger.response });
                                    for (let i = 1; i < trigger.mediaPaths.length; i++) {
                                        if (fs.existsSync(trigger.mediaPaths[i])) {
                                            const media = MessageMedia.fromFilePath(trigger.mediaPaths[i]);
                                            await msg.reply(media);
                                        }
                                    }
                                } catch (e) {
                                    console.error('Error enviando media:', e);
                                    await msg.reply(trigger.response);
                                }
                            } else {
                                await msg.reply(trigger.response);
                            }
                            
                            db = getDB();
                            if (db.conversations[phone]) {
                                db.conversations[phone].history.push({ 
                                    role: "assistant", 
                                    content: trigger.response, 
                                    timestamp: nowRD().toISOString() 
                                });
                                db.stats.replied = (db.stats.replied || 0) + 1;
                                saveDB(db);
                            }
                            io.emit('data_update', db);
                            return;
                        }
                    }

                    // Si no hay trigger, intentar con IA Gemini
                    const cfg = getConfig();
                    if (cfg.iaEnabled && cfg.geminiApiKey) {
                        console.log(`ü§ñ Intentando usar Gemini para ${phone}`);
                        const iaReply = await callGemini(phone, msg.body, conv.name);
                        
                        if (iaReply) {
                            console.log(`‚úÖ Gemini respondi√≥ a ${phone}`);
                            await msg.reply(iaReply);
                            
                            db = getDB();
                            if (db.conversations[phone]) {
                                db.conversations[phone].history.push({ 
                                    role: "assistant", 
                                    content: iaReply, 
                                    timestamp: nowRD().toISOString() 
                                });
                                db.stats.iaReplied = (db.stats.iaReplied || 0) + 1;
                                db.stats.replied = (db.stats.replied || 0) + 1;
                                db.stats.total = (db.stats.total || 0) + 1;
                                saveDB(db);
                            }
                            io.emit('data_update', db);
                            return;
                        } else {
                            console.log(`‚ö†Ô∏è Gemini no respondi√≥ a ${phone}, guardando en learning`);
                        }
                    }

                    // Si no hay trigger ni IA, guardar en learning
                    db = getDB();
                    const msgData = {
                        text: msg.body, 
                        from: phone,
                        date: nowRD().format('DD/MM HH:mm'),
                        hasMedia: msg.hasMedia, 
                        type: msg.type
                    };
                    
                    if (!db.learning) db.learning = [];
                    if (!db.learning.some(l => l.text === msg.body && l.from === phone)) {
                        db.learning.push(msgData);
                    }
                    db.stats.total = (db.stats.total || 0) + 1;
                    saveDB(db);
                    io.emit('data_update', db);
                    
                } catch (e) {
                    console.error(`Error procesando mensaje de ${phone}:`, e);
                    try {
                        await msg.reply('Lo siento, ocurri√≥ un error interno. El administrador ha sido notificado.');
                    } catch (sendError) {
                        console.error('Error enviando mensaje de error:', sendError);
                    }
                }
            });
        } catch (e) {
            console.error('Error en evento message:', e);
        }
    });

    client.initialize().catch(e => console.error("Error al iniciar:", e));
}

async function createBackup() {
    try {
        const timestamp = nowRD().format('YYYY-MM-DD_HH-mm-ss');
        const backupData = {
            date: nowRD().format('DD/MM/YYYY HH:mm'),
            database: getDB(),
            config: getConfig()
        };
        const backupFile = path.join(BACKUP_PATH, 'backup_' + timestamp + '.json');
        fs.writeFileSync(backupFile, JSON.stringify(backupData, null, 2));
        console.log('‚úÖ Backup creado:', backupFile, '-', nowRD().format('DD/MM/YYYY HH:mm:ss'));
        return backupFile;
    } catch (e) {
        console.error('‚ùå Error backup:', e);
        return null;
    }
}

async function sendBackupToWhatsApp(backupFile) {
    if (!isConnected) {
        console.log('‚ùå Bot no conectado, backup no enviado');
        return false;
    }
    const freshConfig = getConfig();
    if (!freshConfig.backupPhone || freshConfig.backupPhone.trim() === '') {
        console.log('‚ùå No hay n√∫mero de backup configurado');
        return false;
    }
    try {
        const chatId = freshConfig.backupPhone.includes('@') ?
            freshConfig.backupPhone : freshConfig.backupPhone + '@c.us';
        const media = MessageMedia.fromFilePath(backupFile);
        await client.sendMessage(chatId, media, {
            caption: 'üîê *Backup GZMBOT*\n\nüìÖ Fecha: ' + nowRD().format('DD/MM/YYYY HH:mm') + '\nüïê Hora RD\n\n‚úÖ Copia de seguridad completada'
        });
        console.log('‚úÖ Backup enviado a WhatsApp -', nowRD().format('HH:mm:ss'));
        return true;
    } catch (e) {
        console.error('‚ùå Error enviando backup:', e);
        return false;
    }
}

// ============ CRON BACKUP AUTOM√ÅTICO ============
cron.schedule('0 0 * * *', async () => {
    console.log('üîÑ [CRON] Backup autom√°tico iniciado -', nowRD().format('DD/MM/YYYY HH:mm:ss'));
    const bf = await createBackup();
    if (bf) {
        const sent = await sendBackupToWhatsApp(bf);
        console.log('üîÑ [CRON] Backup enviado:', sent);
    }
}, {
    scheduled: true,
    timezone: TZ
});

console.log('üìÖ Backup autom√°tico programado para 12:00 AM hora RD');

// ============ CRON RECORDATORIOS ============
cron.schedule('* * * * *', () => {
    if (!isConnected) return;

    const db = getDB();
    const currentRD = nowRD().format('YYYY-MM-DDTHH:mm');
    let changed = false;

    if (db.reminders && db.reminders.length > 0) {
        for (let i = db.reminders.length - 1; i >= 0; i--) {
            const rem = db.reminders[i];

            if (rem.date === currentRD) {
                console.log('üîî Enviando recordatorio a', rem.name, '(' + rem.phone + ') -', currentRD);

                const chatId = rem.phone.includes('@') ? rem.phone : rem.phone + '@c.us';
                client.sendMessage(chatId, rem.message)
                    .then(() => console.log('‚úÖ Recordatorio enviado a', rem.name))
                    .catch(e => console.error("‚ùå Error recordatorio:", e.message));

                if (rem.freq === 'Diario') {
                    rem.date = moment.tz(rem.date, TZ).add(1, 'days').format('YYYY-MM-DDTHH:mm');
                } else if (rem.freq === 'Semanal') {
                    rem.date = moment.tz(rem.date, TZ).add(7, 'days').format('YYYY-MM-DDTHH:mm');
                } else if (rem.freq === 'Mensual') {
                    rem.date = moment.tz(rem.date, TZ).add(1, 'months').format('YYYY-MM-DDTHH:mm');
                } else if (rem.freq === 'Anual') {
                    rem.date = moment.tz(rem.date, TZ).add(1, 'years').format('YYYY-MM-DDTHH:mm');
                } else {
                    db.reminders.splice(i, 1);
                }
                changed = true;
            }
        }
    }

    if (changed) {
        saveDB(db);
        io.emit('data_update', db);
    }
}, {
    scheduled: true,
    timezone: TZ
});

console.log('‚è∞ Recordatorios activos - verificando cada minuto en hora RD');

initBot();

// ============ MIDDLEWARE DE AUTENTICACI√ìN ============
const checkAuth = (req, res, next) => {
    if (req.session && req.session.user) {
        next();
    } else {
        res.status(401).send("Unauthorized");
    }
};

// ============ RUTAS ============
app.get('/', (req, res) => {
    if (req.session && req.session.user) {
        res.sendFile(path.join(__dirname, 'views/index.html'));
    } else {
        res.redirect('/login');
    }
});

app.get('/login', (req, res) => res.sendFile(path.join(__dirname, 'views/login.html')));

app.post('/login', (req, res) => {
    const fc = getConfig();
    if (req.body.user === fc.adminUser && req.body.pass === fc.adminPassword) {
        req.session.user = req.body.user;
        res.json({ ok: true });
    } else res.json({ ok: false });
});

app.get('/api/data', checkAuth, (req, res) => {
    const cfg = getConfig();
    const db = getDB();
    res.json({
        ...db, 
        botStatus, 
        qr: lastQR, 
        isConnected,
        backupPhone: cfg.backupPhone || '',
        serverTime: nowRD().format('DD/MM/YYYY HH:mm:ss'),
        timezone: TZ,
        iaEnabled: cfg.iaEnabled || false,
        iaPrompt: cfg.iaPrompt || '',
        geminiApiKey: cfg.geminiApiKey ? '****' : ''
    });
});

app.get('/api/server-time', checkAuth, (req, res) => {
    res.json({
        serverTimeRD: nowRD().format('DD/MM/YYYY HH:mm:ss'),
        serverTimeUTC: moment.utc().format('DD/MM/YYYY HH:mm:ss'),
        timezone: TZ,
        nextBackup: '12:00 AM hora RD'
    });
});

// ============ ENTRENAMIENTO ============
app.post('/api/train', checkAuth, upload.array('media', 10), (req, res) => {
    try {
        const db = getDB();
        const { id, key, response } = req.body;
        
        if (!key || !response) {
            return res.status(400).json({ ok: false, error: 'Faltan campos requeridos' });
        }
        
        const trainData = {
            key: key.trim(),
            response: response.trim(),
            mediaPaths: req.files && req.files.length > 0 ? req.files.map(f => f.path) : [],
            mediaTypes: req.files && req.files.length > 0 ? req.files.map(f => f.mimetype) : []
        };
        
        if (id && id !== "" && id !== "null" && id !== "undefined") {
            if (db.training[id] && db.training[id].mediaPaths && db.training[id].mediaPaths.length > 0) {
                db.training[id].mediaPaths.forEach(p => { if (fs.existsSync(p)) fs.unlinkSync(p); });
            }
            db.training[id] = trainData;
        } else {
            db.training.push(trainData);
        }
        saveDB(db); 
        io.emit('data_update', db); 
        res.json({ ok: true });
    } catch (e) {
        res.status(500).json({ ok: false, error: e.message });
    }
});

app.delete('/api/train/:id', checkAuth, (req, res) => {
    try {
        const db = getDB();
        const item = db.training[req.params.id];
        if (item && item.mediaPaths && item.mediaPaths.length > 0) {
            item.mediaPaths.forEach(p => { if (fs.existsSync(p)) fs.unlinkSync(p); });
        }
        db.training.splice(req.params.id, 1);
        saveDB(db); 
        io.emit('data_update', db); 
        res.json({ ok: true });
    } catch (e) {
        res.status(500).json({ ok: false, error: e.message });
    }
});

app.get('/api/train/template', checkAuth, (req, res) => {
    const template = '# PLANTILLA DE ENTRENAMIENTO GZMBOT\n# =====================================\n#\n# FORMATO:\n# PREGUNTA: texto que el usuario escribe\n# RESPUESTA: texto que el bot responde\n# ---\n\nPREGUNTA: hola\nRESPUESTA: ¬°Hola! Bienvenido. ¬øEn qu√© puedo ayudarte?\n---\n\nPREGUNTA: horario\nRESPUESTA: Lunes a Viernes: 9:00 AM - 6:00 PM\\nS√°bados: 9:00 AM - 1:00 PM\\nDomingos: Cerrado\n---\n\nPREGUNTA: precio\nRESPUESTA: Contacta a nuestro equipo de ventas para precios.\n---\n\nPREGUNTA: ubicaci√≥n\nRESPUESTA: Av. Principal #123, Ciudad.\n---\n';
    res.setHeader('Content-Type', 'text/plain; charset=utf-8');
    res.setHeader('Content-Disposition', 'attachment; filename=plantilla_entrenamiento.txt');
    res.send(template);
});

app.post('/api/train/import', checkAuth, upload.single('file'), (req, res) => {
    try {
        const fileContent = fs.readFileSync(req.file.path, 'utf-8');
        const lines = fileContent.split('\n');
        const db = getDB();
        let cQ = '', cR = '', imported = 0;
        for (let line of lines) {
            line = line.trim();
            if (line.startsWith('#') || line === '') continue;
            if (line.startsWith('PREGUNTA:')) cQ = line.replace('PREGUNTA:', '').trim();
            else if (line.startsWith('RESPUESTA:')) {
                cR = line.replace('RESPUESTA:', '').trim().replace(/\\n/g, '\n');
            } else if (line === '---' && cQ && cR) {
                db.training.push({ key: cQ, response: cR, mediaPaths: [], mediaTypes: [] });
                imported++; cQ = ''; cR = '';
            }
        }
        if (cQ && cR) { db.training.push({ key: cQ, response: cR, mediaPaths: [], mediaTypes: [] }); imported++; }
        saveDB(db); 
        io.emit('data_update', db); 
        fs.unlinkSync(req.file.path);
        res.json({ ok: true, imported });
    } catch (e) { res.status(500).json({ ok: false, error: e.message }); }
});

app.get('/api/train/export', checkAuth, (req, res) => {
    const db = getDB();
    let content = '# RESPUESTAS GZMBOT\n# Exportado: ' + nowRD().format('DD/MM/YYYY HH:mm') + '\n# Total: ' + db.training.length + '\n\n';
    db.training.forEach(t => {
        if (!t.mediaPaths || t.mediaPaths.length === 0) {
            content += 'PREGUNTA: ' + t.key + '\nRESPUESTA: ' + t.response.replace(/\n/g, '\\n') + '\n---\n\n';
        }
    });
    res.setHeader('Content-Type', 'text/plain; charset=utf-8');
    res.setHeader('Content-Disposition', 'attachment; filename=respuestas_exportadas.txt');
    res.send(content);
});

// ============ RECORDATORIOS ============
app.post('/api/reminders', checkAuth, (req, res) => {
    try {
        const db = getDB();
        const { id, name, phone, message, freq, date } = req.body;
        
        if (!name || !phone || !message || !freq || !date) {
            return res.status(400).json({ ok: false, error: 'Faltan campos requeridos' });
        }
        
        const data = { 
            name: name.trim(), 
            phone: phone.replace(/\D/g, ''), 
            message: message.trim(), 
            freq, 
            date 
        };

        console.log('üìù Recordatorio guardado:', name, '- Fecha:', date);

        if (id && id !== "" && id !== "null" && id !== "undefined") {
            db.reminders[id] = data;
        } else {
            db.reminders.push(data);
        }
        saveDB(db); 
        io.emit('data_update', db); 
        res.json({ ok: true });
    } catch (e) {
        res.status(500).json({ ok: false, error: e.message });
    }
});

app.delete('/api/reminders/:id', checkAuth, (req, res) => {
    try {
        const db = getDB(); 
        db.reminders.splice(req.params.id, 1);
        saveDB(db); 
        io.emit('data_update', db); 
        res.json({ ok: true });
    } catch (e) {
        res.status(500).json({ ok: false, error: e.message });
    }
});

