// ============ CONFIGURACI√ìN ============
app.post('/api/config/credentials', checkAuth, (req, res) => {
    try {
        const fc = getConfig();
        if (req.body.user && req.body.user.trim() !== '') {
            fc.adminUser = req.body.user.trim();
        }
        if (req.body.pass && req.body.pass.trim() !== '') {
            fc.adminPassword = req.body.pass.trim();
        }
        fs.writeFileSync(CONFIG_PATH, JSON.stringify(fc, null, 2));
        res.json({ ok: true });
    } catch (e) {
        res.status(500).json({ ok: false, error: e.message });
    }
});

app.post('/api/config/backup-phone', checkAuth, (req, res) => {
    try {
        const fc = getConfig();
        fc.backupPhone = req.body.backupPhone ? req.body.backupPhone.replace(/\D/g, '') : '';
        fs.writeFileSync(CONFIG_PATH, JSON.stringify(fc, null, 2));
        console.log('üì± N√∫mero backup guardado:', fc.backupPhone);
        res.json({ ok: true });
    } catch (e) {
        res.status(500).json({ ok: false, error: e.message });
    }
});

// ============ CONFIGURACI√ìN IA GEMINI ============
app.post('/api/config/ia', checkAuth, (req, res) => {
    try {
        const fc = getConfig();
        
        if (req.body.geminiApiKey !== undefined && req.body.geminiApiKey !== '****') {
            fc.geminiApiKey = req.body.geminiApiKey.trim();
        }
        
        if (req.body.iaEnabled !== undefined) {
            fc.iaEnabled = req.body.iaEnabled === true || req.body.iaEnabled === 'true';
        }
        
        if (req.body.iaPrompt !== undefined) {
            fc.iaPrompt = req.body.iaPrompt.trim();
        }
        
        fs.writeFileSync(CONFIG_PATH, JSON.stringify(fc, null, 2));
        console.log('ü§ñ Configuraci√≥n Gemini guardada - Activada:', fc.iaEnabled);
        console.log('ü§ñ API Key:', fc.geminiApiKey ? 'Configurada' : 'No configurada');
        res.json({ ok: true });
    } catch (e) {
        res.status(500).json({ ok: false, error: e.message });
    }
});

// ============ CONTACTOS ============
app.get('/api/contacts', checkAuth, (req, res) => {
    try {
        const db = getDB();
        const conversations = db.conversations || {};
        const contacts = Object.entries(conversations).map(([phone, data]) => ({
            phone,
            name: data.name || 'Desconocido',
            lastMessage: data.history && data.history.length > 0 ? data.history[data.history.length-1].content : null,
            lastDate: data.history && data.history.length > 0 ? data.history[data.history.length-1].timestamp : null,
            awaitingName: data.awaitingName || false
        }));
        res.json(contacts);
    } catch (e) {
        res.status(500).json({ error: e.message });
    }
});

app.post('/api/contacts/:phone/name', checkAuth, (req, res) => {
    try {
        const db = getDB();
        const { phone } = req.params;
        const { name } = req.body;
        if (!db.conversations[phone]) db.conversations[phone] = { name: null, history: [], awaitingName: false };
        db.conversations[phone].name = name;
        db.conversations[phone].awaitingName = false;
        saveDB(db);
        res.json({ ok: true });
    } catch (e) {
        res.status(500).json({ error: e.message });
    }
});

app.get('/api/contacts/:phone/history', checkAuth, (req, res) => {
    try {
        const db = getDB();
        const { phone } = req.params;
        const conv = db.conversations[phone] || { history: [] };
        res.json(conv.history);
    } catch (e) {
        res.status(500).json({ error: e.message });
    }
});

// ============ BACKUPS ============
app.get('/api/backup/download', checkAuth, async (req, res) => {
    try {
        const bf = await createBackup();
        if (bf) {
            res.download(bf, path.basename(bf), (err) => {
                if (err && !res.headersSent) res.status(500).send('Error');
            });
        } else res.status(500).json({ ok: false, message: 'Error creando backup' });
    } catch (e) { res.status(500).json({ ok: false, error: e.message }); }
});

app.post('/api/backup/send', checkAuth, async (req, res) => {
    if (!isConnected) return res.json({ ok: false, message: 'Bot no est√° conectado' });
    const fc = getConfig();
    if (!fc.backupPhone || fc.backupPhone.trim() === '') return res.json({ ok: false, message: 'No hay n√∫mero configurado. Gu√°rdalo primero.' });
    const bf = await createBackup();
    if (!bf) return res.json({ ok: false, message: 'Error creando backup' });
    const sent = await sendBackupToWhatsApp(bf);
    res.json({ ok: sent, message: sent ? 'Backup enviado correctamente' : 'Error enviando backup' });
});

app.post('/api/backup/restore', checkAuth, upload.single('backup'), (req, res) => {
    try {
        const bc = JSON.parse(fs.readFileSync(req.file.path, 'utf-8'));
        if (bc.database) { saveDB(bc.database); io.emit('data_update', bc.database); }
        if (bc.config) {
            const cc = getConfig();
            const nc = { ...bc.config, adminUser: cc.adminUser, adminPassword: cc.adminPassword, sessionSecret: cc.sessionSecret };
            fs.writeFileSync(CONFIG_PATH, JSON.stringify(nc, null, 2));
        }
        fs.unlinkSync(req.file.path);
        res.json({ ok: true });
    } catch (e) { res.status(500).json({ ok: false, error: e.message }); }
});

// ============ LOGOUT WHATSAPP ============
app.post('/api/logout-wa', checkAuth, async (req, res) => {
    try {
        await client.logout();
        if (fs.existsSync(AUTH_PATH)) fs.rmSync(AUTH_PATH, { recursive: true, force: true });
        isConnected = false;
        botStatus = "Desconectado";
        const db = getDB();
        db.stats.replied = 0;
        db.stats.total = 0;
        db.stats.iaReplied = 0;
        saveDB(db);
        io.emit('data_update', db);
        res.json({ ok: true });
        setTimeout(() => process.exit(0), 1000);
    } catch (e) { res.status(500).send(e.message); }
});

server.listen(config.port, '0.0.0.0', () => {
    console.log('üöÄ GZMBOT ONLINE en puerto', config.port);
    console.log('üïê Hora actual RD:', nowRD().format('DD/MM/YYYY HH:mm:ss'));
    console.log('üìÖ Pr√≥ximo backup: 12:00 AM hora RD');
});
